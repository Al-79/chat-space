.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path, class: "top-items__btn" do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user), class: "top-items__btn" do
          = icon('fas', 'cog')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group-one
        = link_to group_messages_path(group), class: "group-one__link"  do
          .group-one__name
            = group.name
          .group-one__message
            = group.show_last_message